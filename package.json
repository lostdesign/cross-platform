  "bugs": {
    "url": "https://github.com/lostdesign/cross-platform/issues"
  },
  "homepage": "https://github.com/lostdesign/cross-platform#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^7.1.0"
  }
}
